rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Rules for prize images
    match /prizes/{imageId} {
      // Allow anyone to read prize images (public access)
      allow read: if true;
      
      // Allow authenticated users to upload prize images
      // Validate file size (max 5MB) and file type
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      
      // Allow authenticated users to delete prize images
      allow delete: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
